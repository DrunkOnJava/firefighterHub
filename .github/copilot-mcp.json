{
  "mcpServers": {
    "chrome-devtools": {
      "type": "local",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"],
      "tools": [
        "puppeteer_navigate",
        "puppeteer_screenshot",
        "puppeteer_click",
        "puppeteer_fill",
        "puppeteer_select",
        "puppeteer_hover",
        "puppeteer_evaluate"
      ]
    },
    "playwright": {
      "type": "local",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-playwright"],
      "tools": [
        "playwright_navigate",
        "playwright_screenshot",
        "playwright_click",
        "playwright_fill",
        "playwright_pdf",
        "playwright_evaluate"
      ]
    },
    "context7-docs": {
      "type": "sse",
      "url": "https://context7.io/mcp/sse",
      "tools": ["*"]
    },
    "filesystem": {
      "type": "local",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${workspaceFolder}"
      ],
      "tools": [
        "read_file",
        "read_multiple_files",
        "write_file",
        "edit_file",
        "create_directory",
        "list_directory",
        "directory_tree",
        "move_file",
        "search_files",
        "get_file_info"
      ]
    },
    "memory": {
      "type": "local",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "tools": ["*"]
    },
    "web-fetch": {
      "type": "local",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"],
      "tools": ["fetch"]
    },
    "supabase": {
      "type": "local",
      "command": "npx",
      "args": ["-y", "supabase-mcp-server"],
      "tools": [
        "query_database",
        "list_tables",
        "describe_table",
        "generate_types"
      ],
      "env": {
        "SUPABASE_URL": "COPILOT_MCP_SUPABASE_URL",
        "SUPABASE_SERVICE_KEY": "COPILOT_MCP_SUPABASE_KEY"
      }
    }
  }
}
