{
  "name": "Sensitive Files Protection",
  "target": "push",
  "enforcement": "active",
  "conditions": {},
  "rules": [
    {
      "type": "file_path_restriction",
      "parameters": {
        "restricted_file_paths": [
          ".env",
          ".env.local",
          ".env.production",
          ".env.development",
          "*.env",
          "secrets/**/*",
          "credentials/**/*",
          "*.pem",
          "*.key",
          "*.p12",
          "*.pfx",
          "id_rsa",
          "id_dsa",
          "*.sql",
          "dump.sql",
          "backup.sql"
        ]
      }
    },
    {
      "type": "file_extension_restriction",
      "parameters": {
        "restricted_file_extensions": [
          ".env",
          ".pem",
          ".key",
          ".p12",
          ".pfx"
        ]
      }
    },
    {
      "type": "max_file_size",
      "parameters": {
        "max_file_size": 10485760
      }
    },
    {
      "type": "max_file_path_length",
      "parameters": {
        "max_file_path_length": 255
      }
    }
  ],
  "bypass_actors": [
    {
      "actor_id": 5,
      "actor_type": "RepositoryRole",
      "bypass_mode": "always"
    }
  ]
}
