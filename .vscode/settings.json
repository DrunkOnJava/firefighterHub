{
  // ==========================================
  // üíæ EDITOR SETTINGS
  // ==========================================
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.inlineSuggest.enabled": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "editor.suggest.preview": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.minimap.enabled": false,
  "editor.stickyScroll.enabled": true,

  // ==========================================
  // ü§ñ AI ASSISTANTS (Copilot, Claude, MCP)
  // ==========================================
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": true
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.advanced": {
    "debug.overrideEngine": "gpt-4",
    "debug.testOverrideProxyUrl": "",
    "debug.filterLogCategories": []
  },
  // Claude/Codeium settings (if installed)
  "codeium.enableCodeLens": true,
  "codeium.enableSearch": true,

  // ==========================================
  // üé® TAILWIND CSS
  // ==========================================
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },

  // ==========================================
  // ‚úÖ LINTING & VALIDATION
  // ==========================================
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.format.enable": false,
  "eslint.codeActionsOnSave.mode": "all",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,

  // ==========================================
  // üß™ TESTING (Vitest + Playwright)
  // ==========================================
  "testing.automaticallyOpenPeekView": "never",
  "testing.openTesting": "neverOpen",
  "vitest.enable": true,
  "vitest.commandLine": "pnpm run test",
  "vitest.disableWorkspaceWarning": true,
  "playwright.reuseBrowser": false,
  "playwright.showTrace": false,
  "playwright.env": {},

  // ==========================================
  // üìÅ FILE MANAGEMENT
  // ==========================================
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/.vite": true,
    "**/dist": false
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/coverage/**": true
  },
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  // ==========================================
  // üîç SEARCH SETTINGS
  // ==========================================
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/coverage": true,
    "**/.vite": true,
    "**/playwright-report": true,
    "**/test-results": true,
    "pnpm-lock.yaml": true
  },
  "search.useIgnoreFiles": true,
  "search.smartCase": true,

  // ==========================================
  // üé® WORKBENCH UI CUSTOMIZATION
  // ==========================================
  "workbench.activityBar.location": "default",
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "vs-minimal",
  "workbench.sideBar.location": "left",
  "workbench.panel.defaultLocation": "bottom",
  "workbench.tree.indent": 16,
  "workbench.tree.renderIndentGuides": "always",

  // Sidebar visibility (customize what you see)
  "workbench.view.alwaysShowHeaderActions": true,
  "workbench.activityBar.iconClickBehavior": "toggle",

  // Panel settings (bottom terminal/output area)
  "workbench.panel.opensMaximized": "never",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.scrollback": 10000, // ==========================================
  // üìä NPM SCRIPTS PANEL
  // ==========================================
  "npm.enableRunFromFolder": true,
  "npm.scriptExplorerAction": "run",
  "npm.scriptExplorerExclude": ["**/node_modules/**"],

  // ==========================================
  // üóÇÔ∏è EXPLORER SORTING
  // ==========================================
  "explorer.sortOrder": "type",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.test.ts, ${capture}.spec.ts",
    "*.tsx": "${capture}.test.tsx, ${capture}.spec.tsx, ${capture}.module.css",
    "package.json": "pnpm-lock.yaml, package-lock.json, yarn.lock",
    "tsconfig.json": "tsconfig.*.json",
    "vite.config.ts": "vitest.config.ts, playwright.config.ts",
    ".env": ".env.*",
    "README.md": "TODO.md, CHANGELOG.md"
  },

  // ==========================================
  // üóÉÔ∏è SOURCE CONTROL (Git)
  // ==========================================
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "always",

  // ==========================================
  // üîß SUPABASE
  // ==========================================
  "supabase.showInlineDocumentation": true,

  // ==========================================
  // üìù LANGUAGE-SPECIFIC FORMATTERS
  // ==========================================
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "testing.automaticallyOpenTestResults": "neverOpen"
}
